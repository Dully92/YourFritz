# call generator function                                                                             #
#                                                                                                     #
#######################################################################################################
[ -n "$1" ] && ___yf_generate_file="$1" || ___yf_generate_file="/proc/self/fd/1"
___yf_generate_script_template > "$___yf_generate_file"
[ -n "$1" ] && chmod u+rwx "$___yf_generate_file"
