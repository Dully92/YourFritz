exit_callback()
{
	#set -x
	#print 'Exit callback\n' 1>&2
	[ -n "$___yf_temp_dir" ] && __yf_eflush rm -r "$___yf_temp_dir"
}
#######################################################################################################
#                                                                                                     #
# check prerequisites                                                                                 #
#                                                                                                     #
#######################################################################################################
$__yf_check_required_commands__
$__yf_check_required_scripts__
#######################################################################################################
#                                                                                                     #
# command line options definitions and helper functions                                               #
#                                                                                                     #
#######################################################################################################
mandatory_option_argument_missing()
{
	__yf_errmsg "Missing mandatory argument after option '%s'." "$1"
	return 1
}
unknown_option_found()
{
	__yf_errmsg "Unknown option '%s' found." "$1"
	return 0
}
invalid_value_for_option_found()
{
	__yf_errmsg "Invalid value '%s' for option '%s'." "$2" "$1"
	return 1
}
ambiguous_option_found()
{
	__yf_errmsg "The specified option '%s' is ambiguous." "$1"
	return 1
}
too_much_occurrences_of_option_found()
{
	__yf_errmsg "Option '%s' was specified too often." "$1"
	return 1
}
verbose_option_callback()
{
	printf '__yf_option_verbosity=%u\n' "$4"
}
declare_options()
{
	__yf_ui_feature 'options' || return
	__yf_declare_debug_option
	__yf_declare_help_option
	__yf_declare_version_option
	#__yf_declare_option 'username' short='u' long='user' maxoccur='1' optional_arg='name' arg_type='custom=[1-9][0-9]*' desc="$(__yf_get_localized 'OPT_001_DESC')"
	#__yf_declare_option 'password' short='p' long='password' maxoccur='1' mandatory_arg='password' arg_type='xdigit' desc="$(__yf_get_localized 'OPT_002_DESC')"
	#__yf_declare_option 'verbosity' callback='verbose_option_callback' short='v' long='verbose' maxoccur='3' desc="$(__yf_get_localized 'OPT_003_DESC')"
}
$__yf_prepare_options__
#__yf_debug_options 1>&2
#######################################################################################################
#                                                                                                     #
# command line processing                                                                             #
#                                                                                                     #
#######################################################################################################
$__yf_save_command_line__
__yf_debug_cmdline_arguments 1>&2
$__yf_process_options__
#__yf_debug_options 1>&2
__yf_debug_parameters 1>&2
$__yf_exit_on_error__
#######################################################################################################
#                                                                                                     #
# options and parameters have been evaluated and assigned to respective __yf_option_XXX and           #
# __yf_parameter_N variables                                                                          #
#                                                                                                     #
#######################################################################################################
$__yf_get_tempdir__
#printf 'tempfile1=%s\n' "$(__yf_get_tempname)"
: <do_something_useful>
#__yf_set_error <exit_code>
#$__yf_exit_on_error__
#$__yf_exit
#######################################################################################################
#                                                                                                     #
# end of script                                                                                       #
#                                                                                                     #
#######################################################################################################
EOD
}
#######################################################################################################
